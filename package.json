{
  "name": "darkanakin41-docker-toolbox-cli",
  "version": "1.0.0",
  "author": "",
  "description": "",
  "main": "build/index.js",
  "license": "ISC",
  "scripts": {
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "build-watch": "npx tsc --watch",
    "package": "pnpm run build && pkg . --public-packages '*' --output pkg/pt",
    "lint": "prettier --c ./src/**/*.ts",
    "prettify": "prettier --write ./src/**/*.ts",
    "pkg-instal": "npm run package && cp pkg/pt-linux /usr/local/bin/pt"
  },
  "bin": {
    "pt": "./build/index.js",
    "project-toolbox": "./build/index.js"
  },
  "dependencies": {
    "glob": "^7.2.0",
    "jinja-js": "^0.1.8",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "node-docker-api": "^1.1.22",
    "semver": "^7.3.7",
    "simple-git": "^3.4.0",
    "table": "^6.8.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.23",
    "@types/semver": "^7.3.10",
    "@types/yargs": "^17.0.10",
    "cmake-js": "^6.3.0",
    "pkg": "^5.5.2",
    "prettier": "^2.6.1",
    "tslint": "^6.1.3",
    "typescript": "^4.6.3"
  },
  "pkg": {
    "scripts": [
      "build/**/*.js",
      "node_modules/@hanazuki/node-jsonnet/**/*.node"
    ],
    "targets": [
      "node16-linux",
      "node16-macos",
      "node16-win"
    ]
  }
}
